package org.grammaticalframework.eclipse.launch;

import java.io.InputStream;
import java.io.OutputStream;

public class GFConsoleDelegate {
	
	private static OutputStream outputStream;
	private static OutputStream errorStream;
	private static InputStream inputStream;
	
	public static OutputStream getOutputStream() {
		return outputStream;
	}
	public static void setOutputStream(OutputStream outputStream) {
		GFConsoleDelegate.outputStream = outputStream;
	}
	public static OutputStream getErrorStream() {
		return errorStream;
	}
	public static void setErrorStream(OutputStream errorStream) {
		GFConsoleDelegate.errorStream = errorStream;
	}
	public static InputStream getInputStream() {
		return inputStream;
	}
	public static void setInputStream(InputStream inputStream) {
		GFConsoleDelegate.inputStream = inputStream;
	}

}
